                                            TextColor="Black"
                                            FontAttributes="Bold"
                                            FontSize="Small"                       
                                            HorizontalOptions="FillAndExpand"/>
                                    --><!--nội dung bài viết--><!--
                                    <Label 
                                            Text="{Binding Content.Detail.DetailContent.Text}"
                                            TextColor="Black"
                                            FontSize="Small"
                                            HorizontalOptions="FillAndExpand"/>
                                </StackLayout>
                                --><!--Hiển thị ảnh với 4 ảnh--><!--
                            </StackLayout>
                        </ListView.Header>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout Orientation="Vertical" Margin="2,5,2,5">
